<h1>Task Trek</h1>

<% @tasks.each do |task| %>
  <div class="task">
    <h3><%= task.title %></h3>
    <p><%= task.description %></p>
    <%= form_with model: task, url: task_path(task), method: :delete do |f| %>
      <%= f.submit 'Delete', class: 'remove' %>
    <% end %>
  </div>
<% end %>

<%= form_with(model: Task.new, url: tasks_path, local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <%= form.submit 'Add Task' %>
<% end %>
